
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<main class="app-content">
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h4 class="tile-title">Thêm bài viết</h4>
                <div class="tile-body">
                    <form class="row">                  
                        <div class="form-group col-md-12">
                            <label class="control-label">Nội dung bài viết</label>
                            <textarea class="form-control" name="content-new" id="content-new"></textarea>
                        </div>
                    </form>
                </div>
                <button class="btn btn-save" type="submit">Lưu lại</button>
                <a class="btn btn-cancel" href="">Hủy bỏ</a>
            </div>
        </div>
    </div>
</main>

<script src="~/Assets/plugins/ckeditor/ckeditor.js"></script>
<script src="~/Assets/plugins/ckfinder/ckfinder.js"></script>
<script>
    CKEDITOR.replace("content-new");
</script>

