@{ 
    ViewBag.Title = "ShoppingCart";
    Layout = "~/Views/Share/Layout.cshtml";
}

<div class="breadcrumbs py-4">
    <div class="container text-left">
        <ul class="bread-list d-inline-block">
            <li class="d-inline-block text-capitalize"><a href="">Trang chủ<i class="ti-arrow-right mx-2"></i></a></li>
            <li class="d-inline-block text-capitalize"><a href="">Giỏ hàng<i class="ti-arrow-right mx-2"></i></a></li>
        </ul>
    </div>
</div>
<div class="shopping-cart">
    <div class="container">
        <!-- Shopping Sumary -->
        <table class="table shopping-summery bg-white">
            <thead>
                <tr class="main-hading">
                    <th>SẢN PHẨM</th>
                    <th>TÊN SẢN PHẨM</th>
                    <th class="text-center">GIÁ</th>
                    <th class="text-center">SỐ LƯỢNG</th>
                    <th class="text-center">TỔNG</th>
                    <th class="text-center">
                        <i class="ti-trash remove-icon"></i>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Hoa_Chat_Thi_Nghiem_ASP_NET_MVC.Models.CartItem item in ViewBag.cartData)
                    { 
                        <tr>
                            <td class="image" data-title="No">
                                <img src="https://via.placeholder.com/100x100" alt="#">
                            </td>
                            <td class="product-des" data-title="Description">
                                <p class="product-name">
                                    <a href="product-details.html">@item.Product.Name_product</a>
                                </p>
                                <p class="product-des">
                                    @item.Product.Desc_product
                                </p>
                            </td>
                            <td class="price text-center" data-title="Price">
                                <span>@item.Product.Current_price đ</span>
                            </td>
                            <td class="qty" data-title="Qty">
                                <!-- Input Order -->
                                <div class="input-group">
                                    <div class="button minus">
                                        <button type="button" class="btn btn-primary btn-number" disabled="disabled" data-type="minus" data-field="quant[1]">
                                            <i class="ti-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" name="quant[1]" class="input-number" data-min="1" data-max="100" value="1">
                                    <div class="button plus">
                                        <button type="button" class="btn btn-primary btn-number" data-type="plus" data-field="quant[1]">
                                            <i class="ti-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td class="total-amount text-center" data-title="Total">
                                <span>@(item.Product.Current_price*item.Quantity) đ</span>
                            </td>
                            <td class="action text-center" data-title="Remove">
                                <a href="#"><i class="ti-trash remove-icon"></i></a>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>

        <!-- Total Amount -->
        <div class="total-amount">
            <div class="row">
                <div class="col-lg-6 col-md-4 col-12">
                    <p class="last">Tổng trị giá<span>3,000,000đ</span></p>
                </div>
                <div class="col-lg-3 col-md-4 col-12">
                    <a href="/Home/Index" class="btn cont">Tiếp tục mua</a>
                </div>
                <div class="col-lg-3 col-md-4 col-12">
                    <a href="/Checkout/Checkout" class="btn buy">Mua hàng</a>
                </div>
            </div>
        </div>
    </div>
</div>

